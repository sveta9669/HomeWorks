{ 
  "compilerOptions": { 
    "target": "ES6", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "declaration": true, 
    "sourceMap": true, 
    "inlineSourceMap": false, 
    "strictNullChecks": true, 
    "noImplicitAny": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true 
  }, 
  "include": [ 
    "./src/**/*" 
  ], 
  "exclude": [ 
    "node_modules", 
    "**/*.spec.ts" 
  ] 
}